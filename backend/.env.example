# Trading Engine Environment Variables
# Copy this to .env and fill in your values

# ============================================
# CRITICAL: SECURITY CONFIGURATION
# ============================================

# Admin Account (bcrypt hashed password)
# Generate hash: echo -n "your_password" | htpasswd -niB -C 10 admin | cut -d ":" -f 2
# Default password hash for "Admin@123": $2a$10$R0lzdyqUH1SSmY4M0EwE8eEOqHOyE6KXMCT.jgqnCJBv5YmJK3nzS
ADMIN_PASSWORD_HASH=$2a$10$R0lzdyqUH1SSmY4M0EwE8eEOqHOyE6KXMCT.jgqnCJBv5YmJK3nzS
ADMIN_EMAIL=admin@example.com
ADMIN_IP_WHITELIST=127.0.0.1,::1

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_minimum_32_characters_long
JWT_EXPIRY=24h

# Encryption (for sensitive data at rest)
MASTER_ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded

# CSRF Protection
CSRF_SECRET=your_csrf_secret_here

# ============================================
# LIQUIDITY PROVIDERS (LP) - API CREDENTIALS
# ============================================

# OANDA FX
OANDA_API_KEY=your_oanda_api_key_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here

# Binance Crypto
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# ============================================
# BROKER CONFIGURATION
# ============================================

# Broker Identity
BROKER_NAME=RTX Trading

# Price Feed & Execution
PRICE_FEED_LP=OANDA
EXECUTION_MODE=BBOOK
MARGIN_MODE=HEDGING
MAX_TICKS_PER_SYMBOL=50000

# Default Account Settings (for new accounts)
DEFAULT_ACCOUNT_BALANCE=10000.0
DEFAULT_ACCOUNT_LEVERAGE=100
DEFAULT_ACCOUNT_CURRENCY=USD

# Demo Account Settings
DEFAULT_BALANCE=5000.0
DEFAULT_LEVERAGE=100

# ============================================
# DATABASE
# ============================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_engine
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_SSL_MODE=disable

# ============================================
# REDIS (CACHE & SESSIONS)
# ============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# SERVER
# ============================================

PORT=7999
ENVIRONMENT=development

# ============================================
# CORS
# ============================================

ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# NOTIFICATIONS
# ============================================

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Push Notifications (Firebase)
FIREBASE_CREDENTIALS_PATH=

# ============================================
# CLOUD STORAGE & BACKUPS
# ============================================

# S3 (for backups)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BACKUP_BUCKET=

# ============================================
# FIX API PROVISIONING
# ============================================

# Enable FIX API provisioning for clients
FIX_PROVISIONING_ENABLED=false
FIX_PROVISIONING_STORE_PATH=./data/fix_credentials
FIX_MASTER_PASSWORD=your_fix_master_password_here

# ============================================
# MONITORING & OBSERVABILITY
# ============================================

SENTRY_DSN=
LOG_LEVEL=info
